if not platform: platform = '4'
username = 'lcls2'

epics_host = 'daq-tst-dev02'
epics_env = 'EPICS_PVA_ADDR_LIST=172.21.151.255'
#conda_rel = 'ps-2.0.11'
conda_rel = 'ps-2.0.5'
hsd_epics_dev02 = 'DAQ:LAB2:HSD:DEV02'
hsd_epics_dev06 = 'DAQ:LAB2:HSD:DEV06'

shelf = '2'
ip_addr = '10.0.'+shelf
collect_host = 'drp-tst-acc06'
groups = platform
hutch = 'tst'

prom_dir = '/reg/g/psdm/psdatmgr/etc/config/prom' # Prometheus
data_dir = '/ffb01/data'

task_set = 'taskset 0xffbfeffbfe '
std_opts = '-P '+hutch+' -d /dev/datadev_1 -C '+collect_host+' -M '+prom_dir+' -o '+data_dir

# procmgr FLAGS: <port number> static port number to keep executable
#                              running across multiple start/stop commands.
#                "X" open xterm
#                "s" send signal to child when stopping
#
# HOST       UNIQUEID      FLAGS  COMMAND+ARGS
# list of processes to run
#   required fields: id, cmd
#   optional fields: host, port, flags, conda, env, rtprio
#     flags:
#        'x' or 'X'  -> xterm: open small or large xterm for process console
#        's'         -> stop: sends ctrl-c to process
#        'u'         -> uniqueid: use 'id' as detector alias (supported by acq, cam, camedt, evr, and simcam)

# temporary bld server stuff (will be moved elsewhere)
bld_nodes = ['drp-tst-dev021']
bld_str = 'ebeam'
bldcas_str = 'HPSEX'
pva_pv = 'DAQ:LAB2:PVCAM'
ea_cfg = '/reg/neh/home/claus/lclsii/daq/runs/eb/epicsArch.txt'

drp_cmd = task_set+'drp '+std_opts+' -l 0x1'
bld_cmd = task_set+'drp_bld '+std_opts+' -l 0x1 -k interface=eno2 -D '+bld_str
pva_cmd = task_set+'drp_pva '+std_opts+' '+pva_pv
ea_cmd  = task_set+'epicsArch '+std_opts+' '+ea_cfg

teb_cmd = task_set+'teb -P tst -C '+collect_host+' -M '+prom_dir
meb_cmd = task_set+'monReqServer -P '+hutch+' -C '+collect_host+' -M '+prom_dir+' -d -q 4'

